  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .hero {
      background-image: url('/images/restaurant-banner.jpeg');
      background-size: cover;
      background-position: center;
      height: 70vh;
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      text-shadow: 2px 2px 5px #000;
    }
